<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/actv"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:completionHint="Enter a bird name"
        android:completionThreshold="1"
        android:hint="Enter a bird name"

        android:imeOptions="actionSearch"
        android:inputType="text"
        android:singleLine="true" />

    <TextView
        android:id="@+id/color_text"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/actv"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:text="Couleur :"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner_color"
        android:layout_width="323dp"
        android:layout_height="39dp"
        android:layout_below="@id/color_text"
        android:layout_gravity="center_horizontal"
        android:dropDownAnchor="@id/spinner_color" />

    <TextView
        android:id="@+id/size_text"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_color"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-151dp"
        android:layout_marginRight="65dp"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:text="Taille :"
        android:textSize="20sp" />

    <NumberPicker
        android:id="@+id/size_picker"
        android:layout_width="138dp"
        android:layout_height="82dp"
        android:layout_below="@id/size_text"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="86dp"
        android:paddingTop="20dp" />

    <ImageView
        android:id="@+id/birdPreview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/size_picker"
        android:layout_marginStart="-250dp"
        android:layout_marginBottom="-132dp"
        android:layout_toEndOf="@id/size_picker"
        app:srcCompat="@drawable/bird_icon" />

    <ImageView
        android:id="@+id/pigeonIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@id/size_text"
        android:layout_alignBottom="@id/size_picker"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="-135dp"
        app:srcCompat="@drawable/pigeon_icon" />

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/size_picker"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-387dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@id/size_picker"
        android:text="Search" />


</RelativeLayout>